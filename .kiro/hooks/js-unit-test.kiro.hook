{
  "enabled": true,
  "name": "JS Unit Test Runner",
  "description": "Automatically executes unit tests when any .js file is modified to maintain code quality and catch regressions early",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "**/*.js"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "A JavaScript file has been modified. Please run the unit tests to ensure code quality and functionality. Execute the appropriate test command (such as npm test, jest, or the project's configured test runner) and report the results. If any tests fail, provide details about the failures and suggest fixes."
  }
}