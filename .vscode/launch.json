{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Streamlit: app.py (module run)",
      "type": "python",
      "request": "launch",
      "module": "streamlit",
      "cwd": "${workspaceFolder}",
      "args": [
        "run",
        "scripts/app.py",
        "--server.fileWatcherType=none"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
