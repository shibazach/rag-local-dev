{
    // すでに項目がある場合はカンマ区切りで追記する
    "terminal.integrated.shellIntegration.enabled": false,
    // .vscode/settings.json もしくは devcontainer.json の "settings"
    "remote.extensionKind": {
        "github.copilot": [
            "ui"
        ] // ← 常にホスト側で動かす
    },
    // Copilot 自体をワークスペースでは無効化（警告は出るが動作可）
    "github.copilot.enable": false
}