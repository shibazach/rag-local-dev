{
    // すでに項目がある場合はカンマ区切りで追記する
    "terminal.integrated.shellIntegration.enabled": false,

    // ★ GitHub Copilot の設定
    "remote.extensionKind": {
        "github.copilot": ["ui"], // ← 常にホスト側で動かす
        "github.copilot-chat":  ["ui"]   // ← 追加
    } ,
    // ★ 拡張をコンテナにコピーしない決定打
    "remote.downloadExtensionsLocally": false,
    "remote.containers.copyExtensions": false,

    // CPU/GPUプロファイル選択
    "dev.containers.experimental.showProfileCommands": true
}
