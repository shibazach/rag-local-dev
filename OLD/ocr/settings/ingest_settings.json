{
  "ocr": {
    "default_engine": "easyocr",
    "batch_processing": {
      "max_concurrent": 3,
      "timeout_per_page": 60,
      "retry_count": 2
    }
  },
  "processing": {
    "chunk_size": 500,
    "overlap_size": 50,
    "quality_threshold": 0.7,
    "llm_timeout_sec": 300
  },
  "ui": {
    "show_ocr_progress": true,
    "show_llm_prompts": false,
    "auto_scroll": true
  }
}